.service
    display: flex
    width: 100%
    z-index: 1
    .plank
        width: 100%
        max-width 600px
        flex-basis: 400px
        margin: 15px 10px
        position relative
        > img
            box-shadow: 0 3px 13px 1px rgba(0,0,0,.12)
.service-bg
    background-color: $dark
    background: $bg
    box-shadow: 0 5px 16px 1px rgba(0,0,0,.6)
    transform: rotate(2deg)
    position absolute
    top: 0
    bottom: 0
    left: -500px
    right: -500px