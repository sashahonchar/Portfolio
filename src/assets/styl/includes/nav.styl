.header
    position: sticky
    top: 0

    position: fixed
    left: 0
    right: 0

    background-color: $dark
    padding: 10px
    display: none
    align-items: center
    z-index 100
    justify-content: space-between
    transition: 0.4s    
    @media (max-width: 991px)
        display: flex;
    &.scrolled
        background-color: #ffffff
        box-shadow: $boxShadow

        .nav-toggle_menu
            background-color: #ffffff
            .dots-line
                background-color: $dark;
    .header-logo
        display flex
        align-items: center
        img
            width: 40px
            height: 40px
            border-radius: 50%
            overflow: hidden
            border: 1px solid #ffffff
            margin-right: 10px
    .logo-label
        color: $primary


.nav
    position fixed
    left 0
    top 0
    bottom: 0
    width: ($navWidth)px
    min-height: 100vh
    padding 80px 60px 60px
    display: flex
    justify-content: center
    align-items: center
    background-color: $dark
    flex-wrap: wrap
    z-index: 10
    transition: 0.1s
    background: $bg
    &-toggle_menu
        border-radius: 50%;
        z-index: 2;
        margin-left: 10px;
        min-width: 40px;
        height: 40px;
        border: 1px solid #ffffff;
        background-color: $dark;
        justify-content: center;
        cursor: pointer;
        align-items: center;
        display: none;
        flex-direction: column;
        transition: 0.4s;
        .dots-line
            display: flex;
            width: 20px;
            height: 4px;
            border-radius: 10px;
            margin: 1.5px 0;
            background-color: #ffffff;
            transition: 0.5s;
        @media (max-width: 767px)
            display: flex;
        &.active 
            transform: rotate(45deg);
            span.dots-line 
                width: 4px;
                margin: 2px 0;
                

    &.transform
        background-color: $dark
    .list
        z-index: 1
        &-item
            
            @media all and (max-width 360px)
                padding: 4px
            a
                font-size: 12px
                transition: 1s
                &.btn-primary
                    transform: rotateX(360deg)
    &-links
        width: 100%
        margin-top: auto
        padding-bottom: 20px
        ul
            li
                .icon
                    font-size: 50px
                    margin: 0 10px 25px
                    cursor pointer
                    color: #ffffff
                    &:hover
                        color: $primary
    @media all and (max-width 991px)
        position: fixed
        top: 0
        left: 0
        right: 0
        min-height: 60px
        background-color: rgba($dark, .9)
        width: 100vw
        transition: ($duration)s
        transform: translateX(100%)
        &-toggle_menu
            display: flex
        &.active
            transform: translateX(0)
.logo-wrapper
    position relative
    display: flex
    justify-content: center
    align-items: center
    .logo
        &:before
            position absolute
            content: ''
            left: 0
            right: 0
            bottom: 0
            top: 0
            transition: ($duration)s
    a
        position: absolute
        width: 35px
        height: 35px
        transition: ($duration)s
    a:nth-child(1)
        left: 0
        top: 0
        &:hover ~ .logo
            box-shadow: -5px -5px 10px 0 rgba(0,0,0,.5) 

    a:nth-child(2)
        right: 0
        top: 0
        transition-delay: 100ms
        &:hover ~ .logo
            box-shadow: 5px -5px 10px 0 rgba(0,0,0,.5)
    a:nth-child(3)
        left: 0
        bottom: 0
        transition-delay: 200ms
        &:hover ~ .logo
            box-shadow: -5px 5px 10px 0 rgba(0,0,0,.5)
    a:nth-child(4)
        right: 0
        bottom: 0
        transition-delay: 300ms
        &:hover ~ .logo
            box-shadow: 5px 5px 10px 0 rgba(0,0,0,.5)

    &:hover
        a
            z-index 2
            
        a:nth-child(1)
            left: 25px
            top: 25px
        a:nth-child(2)
            right: 25px
            top: 25px
        a:nth-child(3)
            left: 25px
            bottom: 25px
        a:nth-child(4)
            right: 25px
            bottom: 25px
        .logo 
            &:before
                background-color: rgba($primary, 0.4)

.logo
    width: 150px
    height: 150px
    max-height: 150px
    border-radius: 50%
    border: 8px solid $secondary
    overflow: hidden
    background-position: center
    background-size: cover
    background-repeat: no-repeat
    transition: ($duration)s
    box-shadow: $boxShadow
    z-index: 1
    @media all and (max-width 360px)
        width: 120px
        height: 120px
        max-height: 120px
        border: 4px solid $secondary
    &:hover
        box-shadow: $boxShadowHovered
