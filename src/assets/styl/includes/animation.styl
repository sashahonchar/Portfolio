.fade
  transition ($duration)s
  opacity: 0
  &-left
    transform: translateX(-100px)
  &-right
    transform: translateX(100px)
  &-down
    transform: translateY(100px)
  &-up
    transform: translateY(-100px)
  &.active
    opacity: 1
    transform: translateX(0)